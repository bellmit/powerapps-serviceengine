<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<event transactional="true" type="event">
 <exec count="1" type="createlist"/>
 <exec ceiling="false" endmonth="false" nextweekday="false" startmonth="false" to="CURRENT_TIME" truncate="false" type="date"/>
 <exec to="LOGON_USER" type="user"/>
 <exec type="guard">
  <conditions>
   <condition lhsfield="REMARKS" operator="is empty" rhsvalue=""/>
  </conditions>
  <exec message="Adhoc billing created" target="REMARKS" type="formattext"/>
 </exec>
 <exec type="guard">
  <conditions>
   <condition lhsfield="AGENCY_ID" operator="is empty" rhsvalue=""/>
  </conditions>
  <exec statement="getAgencyIdForAdhocBilling" type="select"/>
 </exec>
 <exec type="guard">
  <conditions>
   <condition lhsfield="INVOICE_ID" operator="is not empty" rhsvalue=""/>
  </conditions>
  <exec recordcount="" statement="updateAdhocBilling" type="update"/>
  <exec statement="deleteEcaBillingTransactionAdhoc" type="delete"/>
  <exec from="INVOICE_ID" key="INVOICE_ID" to="TRANSACTIONS" type="copyintolist"/>
  <exec message="Adhoc billing updated" target="MESSAGE" type="formattext"/>
 </exec>
 <exec type="guard">
  <conditions>
   <condition lhsfield="INVOICE_ID" operator="is empty" rhsvalue=""/>
  </conditions>
  <exec statement="createAdhocInvoice" type="insert"/>
  <exec from="ID" key="INVOICE_ID" to="TRANSACTIONS" type="copyintolist"/>
  <exec from="ID" to="INVOICE_ID" type="copy"/>
  <exec message="Adhoc billing created" target="MESSAGE" type="formattext"/>
 </exec>
 <exec statement="insertAdhocBillingHistory" type="insert"/>
 <exec from="LOGON_USER" key="LOGON_USER" to="TRANSACTIONS" type="copyintolist"/>
 <exec from="CURRENT_TIME" key="CURRENT_TIME" to="TRANSACTIONS" type="copyintolist"/>
 <exec argument="TRANSACTIONS" type="loop">
  <exec statement="insertEcaBillingTransactionAdhoc" type="insert"/>
 </exec>
 <exec from="MESSAGE" key="MESSAGE" type="copyintolist"/>
 <exec from="TRUE" key="CLOSE" type="copyintolist"/>
 <exec from="TRUE" key="OPEN_MESSAGE" type="copyintolist"/>
</event>
