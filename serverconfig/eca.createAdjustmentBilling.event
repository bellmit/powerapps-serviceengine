<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<event transactional="true" type="event">
 <exec count="1" type="createlist"/>
 <exec ceiling="false" endmonth="false" nextweekday="false" startmonth="false" to="CURRENT_TIME" truncate="false" type="date"/>
 <exec to="LOGON_USER" type="user"/>
 <exec from="INVOICE_ID" key="INVOICE_ID" to="ADJUSTMENTS" type="copyintolist"/>
 <exec statement="deleteEcaAdjustmentsBilling" type="delete"/>
 <exec argument="ADJUSTMENTS" type="loop">
  <exec statement="insertEcaAdjustmentsBilling" type="insert"/>
 </exec>
 <exec message="Adjustment billing created" target="MESSAGE" type="formattext"/>
 <exec type="guard">
  <conditions>
   <condition lhsfield="REMARKS" operator="is not empty" rhsvalue=""/>
  </conditions>
  <exec statement="getStageCodeForAdjustment" type="select"/>
  <exec statement="insertEcaBillingHistory" type="insert"/>
 </exec>
 <exec from="MESSAGE" key="MESSAGE" type="copyintolist"/>
 <exec from="TRUE" key="CLOSE" type="copyintolist"/>
 <exec from="TRUE" key="OPEN_MESSAGE" type="copyintolist"/>
</event>
