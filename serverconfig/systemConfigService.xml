<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="systemConfigService">

  <resultMap id="getSecurityConfig" class="hmap">
    <result property="COLUMN" javaType="string"/>
    <result property="VALUE" javaType="long"/>
  </resultMap>
  
  <select id="getSecurityConfig" resultMap="getSecurityConfig"> 
    select name,cast(value as numeric) from ptrsecurity_settings
  </select>
  <update id="updateSecurityConfig">
  	update ptrsecurity_settings set value = #VALUE# where name = #DESCRIPTION#
  </update>
</sqlMap>