<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<event transactional="false" type="event">
 <exec ceiling="false" endmonth="false" nextweekday="false" startmonth="false" to="TODAY_DATE" truncate="false" type="date"/>
 <exec ceiling="false" endmonth="false" nextweekday="false" startmonth="false" truncate="true" type="date"/>
 <exec to="CURRENT_USER" type="user"/>
 <exec to="USER_ID" type="user"/>
 <exec event="customer.lock" ignoreresult="true" type="raise"/>
 <exec statement="getCurrentUserType" type="select"/>
 <exec statement="booleanvalues" type="select"/>
 <exec type="parallelquery">
  <query value="getCustomerForTree"/>
  <query value="getCustomerAccountsForTree"/>
  <target value="CUSTOMER_LIST"/>
  <target value="ACCOUNT_LIST"/>
 </exec>
 <exec argument="CUSTOMER_LIST" type="loop">
  <exec message="&lt;html&gt;&lt;font size=&quot;2&quot;&gt;{0}&lt;br/&gt; ({1})&lt;/font&gt;&lt;/html&gt;" target="CUSTOMER_ID_DESCRIPTION" type="formattext">
   <key value="CUSTOMER_NAME"/>
   <key value="CUSTOMER_ID"/>
  </exec>
  <exec message="images/1050_16.png" target="CUSTOMER_ID_DESCRIPTION_ICON" type="formattext"/>
  <exec message="images/1053_16.png" target="PRODUCT_TYPE_DESCRIPTION_ICON" type="formattext"/>
  <exec type="guard">
   <conditions>
    <condition lhsfield="PRODUCT_CATEGORY_CODE" operator="=" rhsvalue="OD"/>
   </conditions>
   <exec message="images/1053_16.png" target="PRODUCT_TYPE_DESCRIPTION_ICON" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="PRODUCT_CATEGORY_CODE" operator="=" rhsvalue="TL"/>
   </conditions>
   <exec message="images/1053_16.png" target="PRODUCT_TYPE_DESCRIPTION_ICON" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="PRODUCT_CATEGORY_CODE" operator="=" rhsvalue="PF"/>
   </conditions>
   <exec message="images/1074_16.png" target="PRODUCT_TYPE_DESCRIPTION_ICON" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="PRODUCT_CATEGORY_CODE" operator="=" rhsvalue="AF"/>
   </conditions>
   <exec message="images/car_16.png" target="PRODUCT_TYPE_DESCRIPTION_ICON" type="formattext"/>
  </exec>
 </exec>
 <exec argument="ACCOUNT_LIST" type="loop">
  <exec message="images/doublerightarrow.gif" target="ACCOUNT_NUMBER_DISPLAY_ICON" type="formattext"/>
  <exec message="&lt;html&gt;&lt;font size=&quot;2&quot;&gt;{0}&lt;/font&gt;&lt;/html&gt;" target="ACCOUNT_NUMBER_DISPLAY" type="formattext">
   <key value="ACCOUNT_NUMBER"/>
  </exec>
  <exec message="&lt;html&gt;&lt;font size=&quot;2&quot;&gt;{0}&lt;/font&gt;&lt;/html&gt;" target="PRODUCT_TYPE_DESCRIPTION" type="formattext">
   <key value="PRODUCT_TYPE_DESCRIPTION"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="DELINQUENT_STATUS" operator="=" rhsvalue="ALMOST DELINQUENT"/>
    <condition lhsfield="STATUS_CODE" operator="&lt;&gt;" rhsvalue="2"/>
   </conditions>
   <exec message="&lt;html&gt;&lt;font size=&quot;2&quot; color=&quot;red&quot;&gt;{0}&lt;/font&gt;&lt;/html&gt;" target="ACCOUNT_NUMBER_DISPLAY" type="formattext">
    <key value="ACCOUNT_NUMBER"/>
   </exec>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="DELINQUENT_STATUS" operator="=" rhsvalue="DELINQUENT"/>
    <condition lhsfield="STATUS_CODE" operator="&lt;&gt;" rhsvalue="2"/>
   </conditions>
   <exec message="&lt;html&gt;&lt;font size=&quot;2&quot; color=&quot;red&quot;&gt;{0}&lt;/font&gt;&lt;/html&gt;" target="ACCOUNT_NUMBER_DISPLAY" type="formattext">
    <key value="ACCOUNT_NUMBER"/>
   </exec>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="STATUS_CODE" operator="=" rhsvalue="2"/>
   </conditions>
   <exec message="&lt;html&gt;&lt;font size=&quot;2&quot; color=&quot;CCCCCC&quot;&gt;{0}&lt;/font&gt;&lt;/html&gt;" target="ACCOUNT_NUMBER_DISPLAY" type="formattext">
    <key value="ACCOUNT_NUMBER"/>
   </exec>
  </exec>
 </exec>
 <exec from="ACCOUNT_LIST" to="CUSTOMER_LIST" type="append"/>
 <exec from="TRUE" key="TRUE" to="CUSTOMER_LIST" type="copyintolist"/>
 <exec from="CUSTOMER_LIST" type="copy"/>
</event>
