<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="redemptionStatementService">


	<insert id="insertTreatmentRedemptionStatement">
		insert into ptrtreatment_redemption_statement
		(TREATMENT_ID,ACCOUNT_ID,TYPE_STATUS_ID,SUBTYPE_ID,EXPIRY_DATE,REDEMPTION_DATE)
		values
		(#ID#, #ACCOUNT_ID#,#TYPE_STATUS_ID#,#SUBTYPE_ID#,#EXPIRY_DATE#,#REDEMPTION_DATE#)
	</insert>
	
	<update id="updateTreatmentRedemptionStatement">
	update ptrtreatment_redemption_statement set TYPE_STATUS_ID=#TYPE_STATUS_ID#,
	SUBTYPE_ID = #SUBTYPE_ID#,EXPIRY_DATE=#EXPIRY_DATE#,REDEMPTION_DATE=#REDEMPTION_DATE#
	where TREATMENT_ID=#ID#
	</update>
	
	<resultMap id="getTreatmentRedemptionStatement" class="hmap">
		<result property="TYPE_STATUS_ID" javaType="long" />
		<result property="SUBTYPE_ID" javaType="long" />
		<result property="EXPIRY_DATE" javaType="date" />
		<result property="REDEMPTION_DATE" javaType="date" />
	</resultMap>	
	
	<select id="getTreatmentRedemptionStatement" resultMap="getTreatmentRedemptionStatement">		
		SELECT TYPE_STATUS_ID,SUBTYPE_ID,EXPIRY_DATE,REDEMPTION_DATE
 	FROM ptrtreatment_redemption_statement
		WHERE TREATMENT_ID=#ID#
	</select>	
	
	
	
	
	
	
	
	<insert id="insertAccountRedemptionStatement">
		insert into ptraccount_redemption_statement
		(ACCOUNT_ID,TYPE_STATUS_ID,EXPIRY_DATE,REDEMPTION_DATE)
		values
		(#ACCOUNT_ID#,#TYPE_STATUS_ID#,#EXPIRY_DATE#,#REDEMPTION_DATE#)
	</insert>
	
	<update id="updateAccountRedemptionStatement">
	update ptraccount_redemption_statement set TYPE_STATUS_ID=#TYPE_STATUS_ID#,
	EXPIRY_DATE=#EXPIRY_DATE#,REDEMPTION_DATE=#REDEMPTION_DATE#
	where ACCOUNT_ID=#ACCOUNT_ID#
	</update>
</sqlMap>