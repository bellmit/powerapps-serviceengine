<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<event transactional="false" type="event">
 <exec type="guard">
  <conditions>
   <condition lhsfield="IS_NEW_TREATMENT" operator="=" rhsvalue="true"/>
  </conditions>
  <exec statement="insertTreatmentEmail" type="insert"/>
 </exec>
 <exec type="guard">
  <conditions>
   <condition lhsfield="IS_NEW_TREATMENT" operator="&lt;&gt;" rhsvalue="true"/>
  </conditions>
  <exec recordcount="" statement="updateTreatmentEmail" type="update"/>
 </exec>
 <exec type="guard">
  <conditions>
   <condition lhsfield="STATUS_ID" operator="=" rhsvalue="15004"/>
  </conditions>
  <exec message=" " target="CC_LIST" type="formattext"/>
  <exec message=" " target="BCC_LIST" type="formattext"/>
  <exec event="email.renderTemplate" ignoreresult="true" type="raise"/>
  <exec from="EMAIL_CONTENT" to="CONTENT" type="copy"/>
  <exec message="text/html" target="MIME_TYPE" type="formattext"/>
  <exec event="email.send" ignoreresult="true" type="raisewith"/>
 </exec>
</event>
