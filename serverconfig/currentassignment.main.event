<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<event transactional="false" type="event">
 <exec count="1" type="createlist"/>
 <exec count="4" to="ACTION_TYPES" type="createlist"/>
 <exec ceiling="false" endmonth="false" nextweekday="false" startmonth="false" truncate="true" type="date"/>
 <exec argument="ACTION_TYPES" index="ID" type="loop">
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="=" rhsvalue="1"/>
   </conditions>
   <exec message="Instruction" target="DESCRIPTION" type="formattext"/>
   <exec message="INSTRUCTION" target="CODE" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="=" rhsvalue="2"/>
   </conditions>
   <exec message="Follow Up" target="DESCRIPTION" type="formattext"/>
   <exec message="FOLLOW_UP" target="CODE" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="=" rhsvalue="3"/>
   </conditions>
   <exec message="Action" target="DESCRIPTION" type="formattext"/>
   <exec message="ACTION" target="CODE" type="formattext"/>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="=" rhsvalue="4"/>
   </conditions>
   <exec message="Special Action" target="DESCRIPTION" type="formattext"/>
   <exec message="SPECIAL_ACTION" target="CODE" type="formattext"/>
  </exec>
 </exec>
 <exec from="TRUE" key="LOAD_ACTION" to="ACTION_TYPES" type="copyintolist"/>
 <exec to="LOGON_USER" type="user"/>
 <exec type="parallelquery">
  <query value="getProcessTypeForMonitoring"/>
  <query value="getProductCategoriesForMonitoring"/>
  <query value="getUserLegalWorklistForMonitoring"/>
  <target value="ASSIGNMENT_CATEGORIES"/>
  <target value="PRODUCT_CATEGORIES"/>
  <target value="WORKLIST"/>
 </exec>
 <exec from="PRODUCT_CATEGORIES" key="PRODUCT_CATEGORIES" to="ASSIGNMENT_CATEGORIES" type="copyintolist"/>
 <exec from="TRUE" key="TRUE" to="ASSIGNMENT_CATEGORIES" type="copyintolist"/>
 <exec argument="ASSIGNMENT_CATEGORIES" type="loop">
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="=" rhsvalue="51"/>
   </conditions>
   <exec type="parallelquery">
    <query value="getProcessSubtypeForclosureSearchFilter"/>
    <query value="getProductCategoriesForForeclosureMonitoring"/>
    <target value="SUBTYPES"/>
    <target value="PRODUCT_CATEGORIES"/>
   </exec>
  </exec>
  <exec type="guard">
   <conditions>
    <condition lhsfield="ID" operator="&lt;&gt;" rhsvalue="51"/>
   </conditions>
   <exec argument="SUBTYPES" query="getProcessSubtypeForSearchFilter" type="query"/>
  </exec>
  <exec from="TRUE" key="LOAD_ACTION" to="SUBTYPES" type="copyintolist"/>
  <exec argument="SUBTYPES" type="loop">
   <exec type="parallelquery">
    <query value="getInstructionSearchFilter"/>
    <query value="getRemedialSearchFilter"/>
    <target value="INSTRUCTIONS"/>
    <target value="CURRENT_REMEDIAL"/>
   </exec>
  </exec>
  <exec argument="AGENCIES" query="getLegalFirmForSearchFilter" type="query"/>
  <exec text="Switch based on Assignment Category" type="comment">
   <exec message="HIDE" target="_CIVIL" type="formattext"/>
   <exec message="HIDE" target="_FORECLOSURE" type="formattext"/>
   <exec message="HIDE" target="_NOTICE" type="formattext"/>
   <exec type="guard">
    <conditions>
     <condition lhsfield="ID" operator="=" rhsvalue="50"/>
    </conditions>
    <exec message="SHOW" target="_CIVIL" type="formattext"/>
   </exec>
   <exec type="guard">
    <conditions>
     <condition lhsfield="ID" operator="=" rhsvalue="51"/>
    </conditions>
    <exec message="SHOW" target="_FORECLOSURE" type="formattext"/>
   </exec>
   <exec type="guard">
    <conditions>
     <condition lhsfield="ID" operator="=" rhsvalue="52"/>
    </conditions>
    <exec message="SHOW" target="_NOTICE" type="formattext"/>
   </exec>
  </exec>
 </exec>
 <exec from="ASSIGNMENT_CATEGORIES" key="ASSIGNMENT_CATEGORIES" type="copyintolist"/>
 <exec from="PRODUCT_CATEGORIES" key="PRODUCT_CATEGORIES" type="copyintolist"/>
 <exec from="WORKLIST" key="WORKLIST" type="copyintolist"/>
 <exec from="ACTION_TYPES" key="ACTION_TYPES" type="copyintolist"/>
</event>
